{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": "container",
    "title": "Mean yearly deviation",
    "data": {
        "url": "https://raw.githubusercontent.com/TFHarrison/FIT_Project2/main/Clean/Yearly_dev.csv"
    },
    "encoding": {
        "x": {
            "field": "Year",
            "type": "quantitative",
            "title": "Year",
            "axis": {"tickCount": 17},
            "scale": {"domain":[1854,2024]}
        },
        "y": {
            "field": "Rain",
            "type": "quantitative",
            "title": "Mean Rain (mm)",
            "axis": {
                "tickCount": 10,
                "gridColor": {
                    "condition": {"test":"datum.value === 0", "value":"black"},
                    "value":"#ddd"
                }
            },
            "scale": {"domain":[-25,25]}
        }
    },
    "layer":[
        {
            "mark":"bar",
            "encoding": {
                "color":{
                    "condition":{"test":"datum.Rain >=0", "value":"blue"},
                    "value":"red"
                },
                "tooltip":[
                    {"field":"Year","type": "quantitative","title":"Year: "},
                    {"field":"Rain","type": "quantitative","format":".2f","title":"Deviation (mm): "}
                ]
            }
        },
        {
            "mark":{
                "type": "text",
                "align": "right",
                "baseline": "middle",
                "dx": -12,
                "fontSize": 12
            },
            "encoding": {
                "text": {"field":"Note", "type": "nominal"},
                "color": {"value": "black"}
            }
        }
    ]
}
