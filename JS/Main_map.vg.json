{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": "container",
    "title": "Rainfall over victoria",
    "projection": {"type": "mercator"},
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/TFHarrison/FIT_Project2/main/Clean/vic_localities.topojson",
          "format": {"type": "topojson", "feature": "vic_localities"}
        },
        "mark": {"type": "geoshape", "fill": "darkgray", "stroke": "black"}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/TFHarrison/FIT_Project2/main/Clean/Station_data.csv"
        },
        "params": [
          {
            "name": "yearsel",
            "value": 2024,
            "select": "point",
            "bind": {
              "input": "range",
              "max": 2020,
              "min": 1860,
              "step": 10,
              "name": "Year: "
            }
          },
          {
            "name": "showall",
            "select": "point",
            "bind": {
              "input": "select",
              "options": [2030, 2050],
              "labels": ["Net mean", "Year mean"],
              "name": "Select: "
            }
          }
        ],
        "transform": [
          {"filter": "(datum.Year==yearsel && showall==2050) || datum.Year==showall"}
        ],
        "mark": {"type": "circle", "opacity": 1, "tooltip": {"content": "data"}},
        "encoding": {
          "longitude": {"field": "Long", "type": "quantitative"},
          "latitude": {"field": "Lat", "type": "quantitative"},
          "color": {
            "field": "Mean",
            "type": "quantitative",
            "title": "Mean Rain (mm)",
            "scale": {"scheme": "blues"}
          }
        }
      }
    ]
  }
