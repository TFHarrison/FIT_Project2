{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": "container",
    "title": "Rainfall over victoria",
    "projection": {"type": "mercator"},
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/TFHarrison/FIT_Project2/main/Clean/vic_localities.topojson",
          "format": {"type": "topojson", "feature": "vic_localities"}
        },
        "mark": {"type": "geoshape", "fill": "darkgray", "stroke": "black"}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/TFHarrison/FIT_Project2/main/Clean/Station_data.csv"
        },
        "params": [
          {
            "name": "yearsel",
            "select": "point",
            "bind": {
              "input": "select",
              "options": [2030, 1860, 1870, 1880, 1890, 1900, 1910, 1920, 1930, 1940, 1950, 1960, 1970, 1980, 1990, 2000, 2010, 2020],
              "labels": ["SHOWALL", "1860", "1870", "1880", "1890", "1900", "1910", "1920", "1930", "1940", "1950", "1960", "1970", "1980", "1990", "2000", "2010", "2020"],
              "name": "Year: "
            }
          }
        ],
        "transform": [
          {"filter": "datum.Year==yearsel"}
        ],
        "mark": {"type": "circle", "opacity": 1, "tooltip": {"content": "data"}},
        "encoding": {
          "longitude": {"field": "Long", "type": "quantitative"},
          "latitude": {"field": "Lat", "type": "quantitative"},
          "color": {
            "field": "Mean",
            "type": "quantitative",
            "title": "Mean Rain (mm)",
            "scale": {"scheme": "blues"}
          }
        }
      }
    ]
  }
