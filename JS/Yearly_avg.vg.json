{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": "container",
    "title": "Average Rainfall per Year",
    "data": {
        "url": "https://raw.githubusercontent.com/TFHarrison/FIT_Project2/main/Clean/Yearly_avg.csv"
    },
    "mark":"line",
    "encoding": {
        "x": {
            "field": "Year",
            "type": "quantitative",
            "title": "Year",
            "axis": {"tickCount": 17},
            "scale": {"domain":[1854,2024]}
        },
        "y": {
            "field": "Rain",
            "type": "quantitative",
            "title": "Mean Rain (ml)",
            "axis": {"tickCount": 11},
            "scale": {"domain":[30,85]}
        },
        "tooltip":[
            {"field":"Year","type": "quantitative","title":"Year: "},
            {"field":"Rain","type": "quantitative","format":".2f","title":"Rainfall (mm): "}
        ]
    }
}
