{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": "container",
    "title": "Average Rainfall per month",
    "data": {
        "url": "https://raw.githubusercontent.com/TFHarrison/FIT_Project2/main/Clean/Monthly_avg.csv"
    },
    "mark":"line",
    "encoding": {
        "x": {
            "field": "Month",
            "type": "quantitative",
            "title": "Month",
            "axis": {"tickCount": 12},
            "scale": {"domain":[1,12]}
        },
        "y": {
            "field": "Rain",
            "type": "quantitative",
            "title": "Mean Rain (mm)",
            "axis": {"tickCount": 8},
            "scale": {"domain":[35,75]}
        },
        "tooltip":[
            {"field":"Month","type": "quantitative","title":"Month: "},
            {"field":"Rain","type": "quantitative","format":".2f","title":"Rainfall (mm): "}
        ]
    }
}
