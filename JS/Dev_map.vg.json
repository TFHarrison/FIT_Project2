{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": "container",
    "title": "Rainfall deviation over victoria",
    "projection": {"type": "mercator"},
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/TFHarrison/FIT_Project2/main/Clean/vic_localities.topojson",
          "format": {"type": "topojson", "feature": "vic_localities"}
        },
        "mark": {"type": "geoshape", "fill": "darkgray", "stroke": "black"}
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/TFHarrison/FIT_Project2/main/Clean/Station_dev.csv"
        },
        "mark": {"type": "circle", "opacity":1},
        "encoding": {
          "longitude": {"field": "Long", "type": "quantitative"},
          "latitude": {"field": "Lat", "type": "quantitative"},
          "color": {
            "field": "Rain",
            "type": "quantitative",
            "title": "Deviation from mean (mm)",
            "scale": {"scheme": "redblue", "domainMid": 0},
            "legend": {"tickCount": 10}
          },
          "tooltip":[
            {"field":"Name","type": "nominal","title":"Location: "},
            {"field":"Rain","type": "quantitative","format":".2f","title":"Deviation (mm): "}
          ]
        }
      }
    ]
  }
